    <div class="row justify-content-between">
      <div class="col-md-6">
        <h1 class="display-5 fw-bold">
          <a class="text-white" href="{{ project.data.git_url }}" target="_blank">
            {{ project.data.title }}<i class="bi bi-github"></i>
          </a>
        </h1>
        {{ project.content | safe }}
      </div>
      <div class="col-md-6">
        <div class="float-right text-center"><img src="/assets/img/{{ project.data.img_name }}" class="rounded" style="width:100%;height:auto;">
        </div>
      </div>
    </div>
  </div>
</div>